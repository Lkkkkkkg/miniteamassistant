.cards {
  padding: 30rpx;
}

.card {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.card-content {
  flex: 1;
}

.avatar-box {
  display: flex;
}
.avatar {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  margin-right: 6rpx;
  border: 1rpx solid #ccc;
}

.loading {
  text-align: center;
}

.button-join {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border: 1rpx solid #000;
}

.button-add {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 50%;
    border: 1rpx solid #000;
}
