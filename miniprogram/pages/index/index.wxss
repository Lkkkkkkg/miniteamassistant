.cards {
  padding: 30rpx;
}

.card {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.card-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.card-content {
  flex: 1;
}

.button-join {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border: 1rpx solid #000;
}

.button-add {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 50%;
}
