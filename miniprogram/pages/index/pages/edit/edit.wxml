<view class="page">
  <view class="page-header">
    <view class="button-submit" bindtap="submit">{{submiting ? '确定中':'确定'}}</view>
  </view>
  <view class="form">
    <view class="form-item">
      <view class="form-label">队名</view>
      <view class="form-value">
        <input class="form-input" value="{{teamName}}" bindinput="handleTeamNameInput" placeholder="请输入队名"></input>
      </view>
    </view>
    <view class="form-item">
      <view class="form-label">游戏</view>
      <view class="form-value">
        <picker bindchange="bindTypeChange" value="{{gameTypeIndex}}" range="{{gameTypeList}}">
          <view class="picker">
            {{gameTypeList[gameTypeIndex]}}
          </view>
        </picker>
      </view>
    </view>
    <view class="form-item">
      <view class="form-label">人数</view>
      <view class="form-value">
        <picker bindchange="bindMaxNumChange" value="{{maxNumIndex}}" range="{{maxNumList}}">
          <view class="picker">
            {{maxNumList[maxNumIndex]}}
          </view>
        </picker>
      </view>
    </view>
    <view class="form-item">
      <view class="form-label">开始时间</view>
      <view class="form-value">
        <picker mode="time" value="{{startTime}}" start="00:00" end="23:59" bindchange="bindStartTimeChange">
          <view class="picker">
            {{startTime}}
          </view>
        </picker>
      </view>
    </view>
  </view>
</view>