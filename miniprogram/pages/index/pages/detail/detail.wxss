page {
  background-color: #1ca2ff;
}

.page {
  background-color: #fff;
  min-height: calc(100vh - 128rpx);
}

.page-header {
  padding: 0 30rpx 15rpx;
}

.page-body {
  padding: 0 30rpx;
}

.page-header {
  color: #fff;
  background-color: #1ca2ff;
  font-size: 0;
}

.page-title {
  display: flex;
  align-items: center;
  font-size: 44rpx;
  font-weight: bold;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.8);
}

.team-name {
  margin-top: 20rpx;
  font-size: 34rpx;
  min-height: 44rpx;
}

.team-remarks, .team-duration, .participants-des {
  margin-top: 10rpx;
  font-size: 26rpx;
}
.activity-icon-wrap {
  position: relative;
  margin-top: 20rpx;
}

.activity-des {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.activity-icon {
  width: 100%;
  height: 386.22rpx;
  background: #f5f6f7;
}

.page-body {
  background-color: #fff;
}

.page-body .page-title {
  border-bottom: 1rpx solid #ccc;
}

.participants-des {
  color: #777;
}

.participant-wrap {
  display: flex;
  align-items: center;
  line-height: 102rpx;
  margin-top: 20rpx;
}

.participant-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  border: 1rpx solid #ccc;
}

.participant-name {
  border-bottom: 1rpx solid #ccc;
  flex: 1;
}

.page-tips {
  position: absolute;
  bottom: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.loading {
  color: #555;
  font-size: 30rpx;
  text-align: center;
}
