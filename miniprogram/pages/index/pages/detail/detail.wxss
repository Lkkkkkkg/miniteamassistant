page {
  background-color: #1ca2ff;
}

.page {
  background-color: #fff;
  min-height: calc(100vh - 128rpx);
}

.page-disabled {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
}

.page-body {
  background-color: #fff;
  padding: 15rpx 30rpx 0;
}

.page-header {
  color: #fff;
  background-color: #1ca2ff;
  font-size: 0;
}

.page-header-top {
  min-height: 102rpx;
  padding: 0 30rpx;
}


.page-title {
  display: flex;
  align-items: center;
  font-size: 44rpx;
  font-weight: bold;
}

.team-name {
  margin-top: 20rpx;
  font-size: 34rpx;
  min-height: 44rpx;
}

.team-remarks, .team-duration, .participants-des {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.activity-icon-wrap {
  position: relative;
  margin-top: 20rpx;
}

.activity-des {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.activity-icon {
  width: 100%;
  height: 418rpx;
  background: #f5f6f7;
}

.participants-des {
  color: #777;
}

.participant-wrap {
  display: flex;
  align-items: center;
  line-height: 102rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 15rpx 0;
}

.participant-wrap:last-child {
  border: none;
}

.participant-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  border: 1rpx solid #ccc;
}

.participant-name {
  flex: 1;
}

.page-tips {
  text-align: center;
}

.loading {
  color: #555;
  font-size: 30rpx;
  text-align: center;
}

.card-disabled-icon {
  width: 300rpx;
  position: fixed;
  bottom: 50%;
  left: 50%;
  transform: translate(-50%, 50%);
  z-index: 3;
}

.page-footer {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}


.button-action {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 0;
  color: #fff;
  background-color: #1ca2ff;
  transition: opacity 0.45s cubic-bezier(0.23, 1, 0.32, 1);
}

.button-action-hover {
  opacity: 0.5;
}

.button-label {
  font-size: 32rpx;
}

.button-share {
  margin: auto;
  background-color: #1ca2ff;
  color: #fff;
  font-size: 33rpx;
  transition: opacity 0.45s cubic-bezier(0.23, 1, 0.32, 1);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.button-share-hover {
  opacity: 0.5;
}
